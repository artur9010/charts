{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["helm-values", "helmv3", "github-actions", "dockerfile"],
  "helm-values": {
    "fileMatch": ["^[^/]+/values\\.ya?ml$"]
  },
  "helmv3": {
    "fileMatch": ["^[^/]+/Chart\\.ya?ml$"],
    "postUpgradeTasks": {
      "commands": ["helm dependency update {{{packageFileDir}}}"],
      "fileFilters": ["**/Chart.lock"]
    }
  },
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}