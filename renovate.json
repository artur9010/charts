{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    "docker:enableMajor",
    "customManagers:helmChartYamlAppVersions",
    ":disableRateLimiting",
    ":ignoreUnstable",
    ":separateMultipleMajorReleases",
    ":updateNotScheduled"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "description": "Treat every chart as separate group with separate scope and branch prefix",
      "matchFileNames": [
        "charts/**/**"
      ],
      "additionalBranchPrefix": "{{packageFileDir}}-",
      "semanticCommitScope": "{{packageFileDir}}"
    },
    {
      "description": "Disable digest pinning for regex managers in Chart.yaml used for appVersion upgrading",
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "*/Chart.yaml"
      ],
      "pinDigests": false
    }
  ]
}